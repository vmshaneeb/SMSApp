<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<TableSelectDialog title="{i18n>SelEmp}" liveChange="handleSearch" search="handleSearch" confirm="handleClose" cancel="handleClose"
		items="{ path : '/Employee_f4Set', sorter : { path : 'Pernr', descending : false } }">
		<ColumnListItem>
			<cells>
				<ObjectIdentifier title="{Pernr}" text="{Mid}"/>
				<Text text="{Ename}"/>
				<Text text="{Orgeh}"/>
				<Text text="{Orgtx}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>ID}"/>
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="{i18n>EmpName}"/>
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
				<header>
					<Text text="{i18n>OrgUnit}"/>
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
				<header>
					<Text text="{i18n>Dept}"/>
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>